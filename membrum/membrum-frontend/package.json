{
  "name": "membrum-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "amazon-cognito-identity-js": "^1.21.0",
    "aws-sdk": "^2.126.0",
    "chart.js": "^2.7.0",
    "crypto-js": "^3.1.9-1",
    "normalize.css": "^7.0.0",
    "react": "^16.0.0",
    "react-chartjs-2": "^2.6.2",
    "react-dom": "^16.0.0",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "flow-bin": "^0.59.0",
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "prettier": "^1.8.2",
    "react-scripts": "1.0.17"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom --watch",
    "eject": "react-scripts eject",
    "clean": "rm -rf ./build",
    "flow": "flow",
    "mock-db": "json-server -p 4000 --watch ./src/mocks/db.json",
    "deploy":
      "yarn build && aws s3 sync build/ s3://membrum-client && yarn clean",
    "postdeploy":
      "aws cloudfront create-invalidation --distribution-id E2O9SBWDRR4JZS --paths /*",
    "pretty": "prettier --write --no-semi \"src/**/*.js\"",
    "precommit": "lint-staged && yarn test"
  },
  "lint-staged": {
    "*.js": ["yarn run pretty", "git add"]
  }
}
