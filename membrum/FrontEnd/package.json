{
  "name": "membrum-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "chart.js": "^2.7.0",
    "normalize.css": "^7.0.0",
    "react": "^16.0.0",
    "react-chartjs-2": "^2.6.2",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-form": "^7.2.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "cross-env": "^5.1.3",
    "flow-bin": "^0.59.0",
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "prettier": "^1.8.2",
    "react-scripts": "1.0.17"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:staged": "cross-env CI=true react-scripts test --env=jsdom --findRelatedTests",
    "eject": "react-scripts eject",
    "clean": "rm -rf ./build",
    "flow": "flow",
    "predeploy": "yarn test && yarn build",
    "deploy": "aws s3 sync build/ s3://membrum-client",
    "postdeploy": "aws cloudfront create-invalidation --distribution-id E2O9SBWDRR4JZS --paths /* && aws cloudfront create-invalidation --distribution-id E36Q7O5H2Q1R7U --paths /* && yarn clean",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "yarn run test:staged",
      "git add"
    ]
  }
}
