{
  "private": true,
  "name": "zetta-workspace",
  "devDependencies": {
    "eslint": "4.16.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-react": "^7.5.1",
    "flow-bin": "0.64.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "prettier": "^1.8.2"
  },
  "workspaces": [
    "packages/*",
    "zk-open-modules"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "lint": "eslint --fix",
    "update": "sh ./scripts/update.sh",
    "prettier": "prettier --write --loglevel silent \"{,!(node_modules)/**/}*.js\""
  },
  "lint-staged": {
    "*.js": [
      "yarn run lint",
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
